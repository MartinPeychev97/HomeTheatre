@using HomeTheatre.Models.User
@model UserViewModel
@{
    ViewData["Title"] = "Unban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header header-filter" data-parallax="true">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="title">
                    <br />
                    Manage Users
                </h1>
            </div>
        </div>
    </div>
</div>
<div>
    <div class="main main-raised">
        <div class="profile-content">
            <div class="container">
                <div class="row">
                    <div style="text-align:center">
                        <h4>Are you sure you want to unban this user?</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.BanReason)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.BanReason)
                            </dd>
                        </dl>

                        <form asp-area="Member" asp-controller="Users" asp-action="Unban">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Unban" class="btn btn-primary" />
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>
    </div>
</div>