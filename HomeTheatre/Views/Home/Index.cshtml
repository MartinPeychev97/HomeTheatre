
@model TheatreIndexViewModel
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link href="~/assets/Images/TheatreBackGround.jpg" rel="stylesheet" />
</head>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>to</h2>
    <h1>Home Theatre</h1>
</div>

<div class="section text-center" >
    <h2 class="title">Highest rated Theatres </h2>
    <div class="row">
        @foreach (var theatre in Model.TheatreModels)
        {
            <div class="col-md-4 columnhomescreen">
                <a asp-controller="Theatre" asp-action="Details" asp-route-theatreId="@theatre.Id" rel="alternate"> 
                    <img src="@theatre.ImagePath" alt="TheatreImage" style="width:100%; height:240px">
                    <h4 class="card-title">
                        <b> Name:</b>@theatre.Name
                            <br>
                            <b> Location:</b>@theatre.Location
                                <br>
                                <b>Phone:</b> @theatre.Phone
                                    <br>
                                    <b>NumberOfReviews:</b> @theatre.NumberOfReviews
                                        <br>
                                       <b>AverageRating:</b> @theatre.AverageRating
</h4>
                </a>
            </div>
        }
    </div>
</div>
